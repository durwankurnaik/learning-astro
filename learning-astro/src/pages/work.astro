<style>
  body {
    background-color: #5cdb95;
    color: #05386b;
    font-size: 1.2rem;
    font-weight: 200;
    font-family: "Lato", sans-serif;
  }
  main {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    height: 90vh;
    font-size: 4rem;
  }
  h3 {
    margin: 3rem 0;
  }
  span {
    font-size: 1.8rem;
    margin: 0.2rem 0;
  }
  div {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    margin-top: 2rem;
  }
  div li {
    list-style: none;
    font-size: 1.2rem;
  }
</style>
